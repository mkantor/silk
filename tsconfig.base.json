{
  "compilerOptions": {
    "composite": true,
    "exactOptionalPropertyTypes": true,
    "lib": ["esnext"],
    "module": "nodenext",
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUncheckedSideEffectImports": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "verbatimModuleSyntax": true
  }
}
